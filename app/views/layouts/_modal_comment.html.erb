<div class="modal fade" id="CommentModal" tabindex="-1" role="dialog" aria-labelledby="modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" style="text-align: center">
                <h3 class="modal-title" id="CommentModalTitle"><%= hotel.name1 %></h3>
            </div>
            <%= form_with(model: @comment, local: true) do |form| %>
              <input type="hidden" name="comment[hotel_id]" id="hotel_id" value="<%= hotel.id %>">
              <div class="modal-body">
                  <div class="row" style="text-align: center">
                    <span class="star-rating">
                      <input type="radio" name="comment[star]" value="1"><i></i>
                      <input type="radio" name="comment[star]" value="2"><i></i>
                      <input type="radio" name="comment[star]" value="3"><i></i>
                      <input type="radio" name="comment[star]" value="4"><i></i>
                      <input type="radio" name="comment[star]" value="5"><i></i>
                    </span>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <label for="comment[name]">お名前</label>
                      <%= form.text_field :name, class:"form-control" %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12">
                      <label for="comment[comment]">コメント</label>
                      <%= form.text_area :comment, class:"form-control", style:"height:200px" %>
                    </div>
                  </div>
              </div>
              <div class="modal-footer" style="text-align: center">
                  <%= form.submit :class=>"btn btn-primary" %>
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">閉じる</button>
              </div>
            <% end %>
        </div>
    </div>
</div>