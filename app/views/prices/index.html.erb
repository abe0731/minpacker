<p id="notice"><%= notice %></p>

<h1>Prices</h1>

<table>
  <thead>
    <tr>
      <th>Hotel</th>
      <th>Title</th>
      <th>Quantity rent</th>
      <th>Rent unit</th>
      <th>Quantity stay</th>
      <th>Stay unit</th>
      <th>Money</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prices.each do |price| %>
      <tr>
        <td><%= price.hotel %></td>
        <td><%= price.title %></td>
        <td><%= price.quantity_rent %></td>
        <td><%= price.rent_unit %></td>
        <td><%= select_tag :rent_unit_id, options_from_collection_for_select(RentUnit.all, :id, :name) %></td>
        <td><%= price.quantity_stay %></td>
        <td><%= price.stay_unit %></td>
        <td><%= price.money %></td>
        <td><%= link_to 'Show', price %></td>
        <td><%= link_to 'Edit', edit_price_path(price) %></td>
        <td><%= link_to 'Destroy', price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Price', new_price_path %>
